        <DataGrid Grid.Row="1" HorizontalAlignment="Center" Margin="15"   
        Name="McDataGrid" RowHeight="30" ColumnWidth="100" CellEditEnding="McDataGrid_CellEditEnding"  GridLinesVisibility="Vertical" HeadersVisibility="All"   VerticalAlignment="Center" Background="LightGray" RowBackground="LightYellow" AlternatingRowBackground="LightBlue">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding QuestionId}"/>
                <DataGridTextColumn Header="Textul intrebarii" Binding="{Binding QuestionText}"/>
                <DataGridComboBoxColumn Header="Nivel de dificultate" x:Name="DifficultyDropDown"
                                        SelectedValueBinding="{Binding DifficultyLevel}"  
                                        SelectedItemBinding="{Binding DifficultyLevel}"
                                        SelectedValuePath="Value"/>
                <DataGridTextColumn Header="Optiunea ID:0" Binding="{Binding Options[0]}"/>
                <DataGridTextColumn Header="Optiunea ID:1" Binding="{Binding Options[1]}"/>
                <DataGridTextColumn Header="Optiunea ID:2" Binding="{Binding Options[2]}"/>
                <DataGridTextColumn Header="Optiunea ID:3" Binding="{Binding Options[3]}"/>
                <DataGridTextColumn Header="ID optiune corecta" Binding="{Binding CorrectOptionIndex}"/>
                <DataGridTextColumn Header="Explicatii" Binding="{Binding Explanations}"/>
            </DataGrid.Columns>
        </DataGrid>

        


        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Modifica"/>
            <Button Grid.Column="1" Content="Elimina"/>
